<dialog id="member-modal" class="member-modal">
    <button class="close-modal" aria-label="Close modal">âœ•</button>

    <div class="modal-grid-layout">
        <div class="modal-image-col" id="modal-full-image-container">
            <img id="modal-full-image" src="" alt="" class="full-body-img" />
        </div>

        <div class="modal-content-col">
            <div class="modal-header">
                <div
                    class="image-bg-wrapper modal-img-wrapper"
                    id="modal-img-container"
                >
                    <img id="modal-img" src="" alt="" class="member-img" />
                </div>
                <div class="modal-titles">
                    <h3 id="modal-name" class="member-name"></h3>
                    <p id="modal-role" class="member-role"></p>
                </div>
            </div>
            <div class="modal-body">
                <p id="modal-bio" class="member-bio"></p>
            </div>
        </div>
    </div>
</dialog>

<style>
    /* --- Modal Container --- */
    .member-modal {
        border: none;
        border-radius: 24px;
        padding: 0;
        background-color: var(--bg-color, #ffffff);
        max-width: 900px;
        width: 95%;
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);

        /* This prevents anything from breaking outside the rounded corners */
        overflow: hidden;
        max-height: 90vh;
    }

    .member-modal::backdrop {
        background: rgba(246, 244, 238, 0.7);
        backdrop-filter: blur(6px);
    }

    /* --- Close Button (Now perfectly locked) --- */
    .close-modal {
        position: absolute;
        top: 20px;
        right: 20px;
        background: rgba(255, 255, 255, 0.7);
        backdrop-filter: blur(4px);
        border-radius: 50%;
        border: none;
        font-size: 18px;
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        color: var(--text-headline);
        transition: all 0.2s ease;
        z-index: 100; /* Stays above everything, always */
    }

    .close-modal:hover {
        background-color: var(--accent1);
        color: var(--text-on-accent);
    }

    /* --- Desktop Grid Layout --- */
    .modal-grid-layout {
        display: grid;
        grid-template-columns: 2fr 3fr;
        height: 100%;
        max-height: 90vh;
        min-height: 500px;
        background-color: var(--bg-color, #ffffff);
    }

    .member-modal.no-full-image .modal-grid-layout {
        grid-template-columns: 1fr;
    }

    /* --- Left Column: Full Image --- */
    .modal-image-col {
        background-color: var(--accent3);
        position: relative;
        height: 100%;
        min-height: 300px;
    }

    .full-body-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center top;
        display: block;
    }

    /* --- Right Column: Text Content --- */
    .modal-content-col {
        padding: 50px 40px;
        text-align: left;
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        overflow-y: auto; /* Desktop scrolls here */
    }

    /* Custom Scrollbar for Desktop */
    .modal-content-col::-webkit-scrollbar {
        width: 6px;
    }
    .modal-content-col::-webkit-scrollbar-track {
        background: transparent;
        margin: 20px 0;
    }
    .modal-content-col::-webkit-scrollbar-thumb {
        background-color: var(--accent3, #e5e7eb);
        border-radius: 10px;
    }
    .modal-content-col::-webkit-scrollbar-thumb:hover {
        background-color: var(--accent1, #9ca3af);
    }

    /* --- Keeping your existing inner styles --- */
    .modal-header {
        display: flex;
        align-items: center;
        gap: 24px;
        margin-bottom: 32px;
    }

    .modal-img-wrapper {
        width: 80px;
        height: 80px;
        margin-bottom: 0;
        background-color: var(--accent3);
        border-radius: 50%;
        display: flex;
        justify-content: center;
        align-items: flex-end;
        overflow: hidden;
        flex-shrink: 0;
        border: 3px solid var(--bg-color, #ffffff);
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .member-img {
        width: 90%;
        height: auto;
        object-fit: contain;
    }
    .modal-titles .member-name {
        font-family: font1;
        font-size: 32px;
        color: var(--accent1);
        margin: 0 0 8px 0;
    }
    .modal-titles .member-role {
        font-family: font2;
        color: var(--text-paragraph);
        font-size: 16px;
        opacity: 0.8;
        margin: 0;
    }
    .member-bio {
        font-family: font2;
        color: var(--text-paragraph);
        line-height: 1.7;
        font-size: 17px;
        margin: 0;
    }

    /* --- Animation --- */
    .member-modal[open] {
        animation: modalFadeIn 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    }
    @keyframes modalFadeIn {
        from {
            opacity: 0;
            transform: translateY(40px) scale(0.95);
        }
        to {
            opacity: 1;
            transform: translateY(0) scale(1);
        }
    }

    /* =======================================================
       MOBILE OVERLAP SCROLLING EFFECT
       ======================================================= */
    /* =======================================================
       MOBILE OVERLAP SCROLLING EFFECT (FIXED)
       ======================================================= */
    @media (max-width: 850px) {
        .modal-grid-layout {
            display: block;
            height: 85vh;
            overflow-y: auto;

            position: static;
        }

        .modal-image-col {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 380px;
            z-index: 1; /* Stays behind the white text card */
        }

        .modal-content-col {
            position: relative;
            z-index: 2; /* Forces the card to slide OVER the image */
            background-color: var(--bg-color, #ffffff);

            /* THE OVERLAP MAGIC: 
               The image is 380px tall. We push this card down 340px, 
               leaving exactly a 40px overlap for the rounded corners. */
            margin-top: 340px;
            border-top-left-radius: 30px;
            border-top-right-radius: 30px;

            padding: 100px 24px 30px;
            /* Ensures the white background stretches to the bottom even on short bios */
            min-height: calc(100% - 200px);
            box-shadow: 0 -10px 25px rgba(0, 0, 0, 0.15);
        }

        .modal-header {
            flex-direction: column;
            text-align: center;
            /* Pulls headshot up to sit perfectly half on image, half on card */
            margin-top: -80px;
        }

        .modal-img-wrapper {
            margin: 0 auto 16px;
        }

        /* Adjust close button look for mobile so it reads well over photos */
        .close-modal {
            top: 15px;
            right: 15px;
            background: rgba(0, 0, 0, 0.4);
            color: #ffffff;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .close-modal:hover {
            background: var(--accent1);
        }

        /* Logic for when no image is provided */
        .member-modal.no-full-image .modal-image-col {
            display: none;
        }
        .member-modal.no-full-image .modal-content-col {
            margin-top: 0;
            border-radius: 0;
            box-shadow: none;
            min-height: 100%;
        }
        .member-modal.no-full-image .modal-header {
            margin-top: 0;
        }
    }
</style>

<script>
    function setupMemberModal() {
        const modal = document.getElementById(
            "member-modal",
        ) as HTMLDialogElement;
        if (!modal) return;

        const closeBtn = modal.querySelector(".close-modal");

        const modalImg = modal.querySelector("#modal-img") as HTMLImageElement;
        const modalImgContainer = modal.querySelector(
            "#modal-img-container",
        ) as HTMLElement;
        const modalName = modal.querySelector("#modal-name");
        const modalRole = modal.querySelector("#modal-role");
        const modalBio = modal.querySelector("#modal-bio");

        const modalFullImg = modal.querySelector(
            "#modal-full-image",
        ) as HTMLImageElement;
        const modalFullImgContainer = modal.querySelector(
            "#modal-full-image-container",
        ) as HTMLElement;

        const readMoreBtns = document.querySelectorAll(".read-more-btn");

        readMoreBtns.forEach((btn) => {
            btn.addEventListener("click", (e) => {
                const target = e.currentTarget as HTMLButtonElement;
                const { name, role, img, fullBodyImg, bio } = target.dataset;

                if (modalName) modalName.textContent = name || "";
                if (modalRole) modalRole.textContent = role || "";
                if (modalBio) modalBio.innerHTML = bio || "";

                if (
                    img &&
                    img !== "undefined" &&
                    modalImgContainer &&
                    modalImg
                ) {
                    modalImg.src = img;
                    modalImg.alt = name || "Team member";
                    modalImgContainer.style.display = "flex";
                } else if (modalImgContainer) {
                    modalImgContainer.style.display = "none";
                }

                if (
                    fullBodyImg &&
                    fullBodyImg !== "undefined" &&
                    modalFullImgContainer &&
                    modalFullImg
                ) {
                    modalFullImg.src = fullBodyImg;
                    modalFullImg.alt = `${name} full body picture`;
                    modalFullImgContainer.style.display = "block";
                    modal.classList.remove("no-full-image");
                } else {
                    if (modalFullImgContainer)
                        modalFullImgContainer.style.display = "none";
                    modal.classList.add("no-full-image");
                }

                // Reset scroll position when opening a new member
                const gridLayout = modal.querySelector(".modal-grid-layout");
                const contentCol = modal.querySelector(".modal-content-col");
                if (gridLayout) gridLayout.scrollTop = 0;
                if (contentCol) contentCol.scrollTop = 0;

                modal.showModal();
                document.body.style.overflow = "hidden";
            });
        });

        const closeModal = () => {
            modal.close();
            document.body.style.overflow = "";
        };

        closeBtn?.addEventListener("click", closeModal);

        modal.addEventListener("click", (e) => {
            const dialogDimensions = modal.getBoundingClientRect();
            if (
                e.clientX < dialogDimensions.left ||
                e.clientX > dialogDimensions.right ||
                e.clientY < dialogDimensions.top ||
                e.clientY > dialogDimensions.bottom
            ) {
                closeModal();
            }
        });
    }

    document.addEventListener("DOMContentLoaded", setupMemberModal);
</script>
