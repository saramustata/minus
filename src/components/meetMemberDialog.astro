// src/components/MemberModal.astro
// No Astro-side props needed here, as it's populated via Client-side JS.
---

<dialog id="member-modal" class="member-modal">
    <div class="modal-grid-layout">
        <div class="modal-image-col" id="modal-full-image-container">
            <img id="modal-full-image" src="" alt="" class="full-body-img" />
        </div>

        <div class="modal-content-col">
            <div class="modal-header">
                <div
                    class="image-bg-wrapper modal-img-wrapper"
                    id="modal-img-container"
                >
                    <img id="modal-img" src="" alt="" class="member-img" />
                </div>
                <div class="modal-titles">
                    <h3 id="modal-name" class="member-name"></h3>
                    <p id="modal-role" class="member-role"></p>
                </div>
            </div>
            <div class="modal-body">
                <p id="modal-bio" class="member-bio"></p>
            </div>
        </div>

        <button class="close-modal" aria-label="Close modal">âœ•</button>
    </div>
</dialog>

<style>
    /* --- Modal Container --- */
    .member-modal {
        border: none;
        border-radius: 24px;
        padding: 0;
        /* Ensure background color matches your theme's paper/card color */
        background-color: var(--bg-color, #ffffff);

        /* Increase max-width to accommodate side-by-side layout */
        max-width: 900px;
        width: 95%;

        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
        overflow: hidden; /* Ensure image doesn't bleed out corners */
    }

    .member-modal::backdrop {
        background: rgba(246, 244, 238, 0.7);
        backdrop-filter: blur(6px);
    }

    /* --- The Grid Layout --- */
    .modal-grid-layout {
        display: grid;
        /* 2/5 width for image, 3/5 for text on desktop */
        grid-template-columns: 2fr 3fr;
        position: relative; /* Needed for close button positioning */
        min-height: 500px; /* Ensures a nice height even with short bio */
    }

    .member-modal.no-full-image .modal-grid-layout {
        grid-template-columns: 1fr; /* Switch to single column if no image */
    }

    /* --- Left Column: Full Image --- */
    .modal-image-col {
        background-color: var(--accent3); /* Fallback/placeholder color */
        position: relative;
        height: 100%;
        min-height: 300px; /* Ensure visibility */
    }

    .full-body-img {
        width: 100%;
        height: 100%;
        /* Crucial: makes the image cover the area without stretching */
        object-fit: cover;
        object-position: center top; /* Focus on the top half of the person */
        display: block;
    }

    /* --- Right Column: Text Content --- */
    .modal-content-col {
        padding: 50px 40px;
        text-align: left;
        display: flex;
        flex-direction: column;
        justify-content: center; /* Vertically center text if bio is short */
    }

    /* --- Close Button styling update --- */
    .close-modal {
        position: absolute;
        top: 20px;
        right: 20px;
        background: rgba(255, 255, 255, 0.5); /* Semi-transparent background */
        backdrop-filter: blur(4px);
        border-radius: 50%;
        border: none;
        font-size: 18px;
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        color: var(--text-headline);
        transition: all 0.2s ease;
        z-index: 10; /* Ensure it sits above the image column */
    }

    .close-modal:hover {
        background-color: var(--accent1);
        color: var(--text-on-accent);
    }

    /* --- Keeping your existing inner styles --- */
    .modal-header {
        display: flex;
        align-items: center;
        gap: 24px;
        margin-bottom: 32px;
    }

    .modal-img-wrapper {
        width: 80px; /* Slightly smaller headshot now that we have full body */
        height: 80px;
        margin-bottom: 0;
        background-color: var(--accent3);
        border-radius: 50%;
        display: flex;
        justify-content: center;
        align-items: flex-end;
        overflow: hidden;
        flex-shrink: 0;
        border: 3px solid #fff; /* Adds definition against the new layout */
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .member-img {
        width: 90%;
        height: auto;
        object-fit: contain;
    }

    .modal-titles .member-name {
        font-family: font1;
        font-size: 32px;
        color: var(--accent1);
        margin: 0 0 8px 0;
    }

    .modal-titles .member-role {
        font-family: font2;
        color: var(--text-paragraph);
        font-size: 16px;
        opacity: 0.8;
        margin: 0;
    }

    .member-bio {
        font-family: font2;
        color: var(--text-paragraph);
        line-height: 1.7;
        font-size: 17px;
        margin: 0;
    }

    /* --- Animation --- */
    .member-modal[open] {
        animation: modalFadeIn 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    }

    @keyframes modalFadeIn {
        from {
            opacity: 0;
            transform: translateY(40px) scale(0.95);
        }
        to {
            opacity: 1;
            transform: translateY(0) scale(1);
        }
    }

    /* --- Responsive: Stack on Mobile --- */
    @media (max-width: 850px) {
        .modal-grid-layout {
            /* Stack vertically */
            grid-template-columns: 1fr;
            grid-template-rows: auto auto;
        }

        .modal-image-col {
            /* Limit height on mobile so it doesn't take the whole screen */
            height: 300px;
            order: -1; /* Ensure image is on top */
        }

        .modal-content-col {
            padding: 30px 24px;
        }

        .modal-header {
            /* Optional: center header on mobile */
            flex-direction: column;
            text-align: center;
        }

        .close-modal {
            /* On mobile, moving it to the top right of the image feels better */
            top: 15px;
            right: 15px;
            background: rgba(0, 0, 0, 0.3);
            color: #fff;
        }
        .close-modal:hover {
            background: var(--accent1);
        }
    }
</style>

<script>
    // Wrapped in a setup function for safety with View Transitions or delayed loading
    function setupMemberModal() {
        const modal = document.getElementById(
            "member-modal",
        ) as HTMLDialogElement;
        if (!modal) return;

        const closeBtn = modal.querySelector(".close-modal");

        // Get references to existing elements
        const modalImg = modal.querySelector("#modal-img") as HTMLImageElement;
        const modalImgContainer = modal.querySelector(
            "#modal-img-container",
        ) as HTMLElement;
        const modalName = modal.querySelector("#modal-name");
        const modalRole = modal.querySelector("#modal-role");
        const modalBio = modal.querySelector("#modal-bio");

        // Get references to NEW elements
        const modalFullImg = modal.querySelector(
            "#modal-full-image",
        ) as HTMLImageElement;
        const modalFullImgContainer = modal.querySelector(
            "#modal-full-image-container",
        ) as HTMLElement;

        const readMoreBtns = document.querySelectorAll(".read-more-btn");

        readMoreBtns.forEach((btn) => {
            btn.addEventListener("click", (e) => {
                const target = e.currentTarget as HTMLButtonElement;
                // Destructure the new dataset item: fullBodyImg
                // Note: dataset property names convert kebab-case to camelCase
                // (data-full-body-img becomes fullBodyImg)
                const { name, role, img, fullBodyImg, bio } = target.dataset;

                // Populate Text
                if (modalName) modalName.textContent = name || "";
                if (modalRole) modalRole.textContent = role || "";
                if (modalBio) modalBio.innerHTML = bio || ""; // Use innerHTML if bio contains bold/italics

                // Populate Headshot (Circular Image)
                if (
                    img &&
                    img !== "undefined" &&
                    modalImgContainer &&
                    modalImg
                ) {
                    modalImg.src = img;
                    modalImg.alt = name || "Team member";
                    modalImgContainer.style.display = "flex";
                } else if (modalImgContainer) {
                    modalImgContainer.style.display = "none";
                }

                // Populate NEW Full Body Image
                if (
                    fullBodyImg &&
                    fullBodyImg !== "undefined" &&
                    modalFullImgContainer &&
                    modalFullImg
                ) {
                    modalFullImg.src = fullBodyImg;
                    modalFullImg.alt = `${name} full body picture`;
                    // Ensure the grid column is visible
                    modalFullImgContainer.style.display = "block";
                    // If we have a full image, let's make the grid 2 columns (desktop)
                    modal.classList.remove("no-full-image");
                } else {
                    // If no full body image exists, hide that column and make text full width
                    if (modalFullImgContainer)
                        modalFullImgContainer.style.display = "none";
                    modal.classList.add("no-full-image");
                }

                modal.showModal();
                // Lock body scroll when modal is open
                document.body.style.overflow = "hidden";
            });
        });

        // Close handlers
        const closeModal = () => {
            modal.close();
            // Unlock body scroll
            document.body.style.overflow = "";
        };

        closeBtn?.addEventListener("click", closeModal);

        modal.addEventListener("click", (e) => {
            const dialogDimensions = modal.getBoundingClientRect();
            if (
                e.clientX < dialogDimensions.left ||
                e.clientX > dialogDimensions.right ||
                e.clientY < dialogDimensions.top ||
                e.clientY > dialogDimensions.bottom
            ) {
                closeModal();
            }
        });
    }

    document.addEventListener("DOMContentLoaded", setupMemberModal);
</script>
