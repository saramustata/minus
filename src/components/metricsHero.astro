---
import MetricsHeroContent from "./metricsHeroContent.astro";
---

<section id="metrics" class="section-container">
    <div class="geometry-container">
        <div class="device-wrapper">
            <div class="device-chassis">
                <div class="device-notch"></div>
                <div class="iphone-buttons"></div>
                <div class="device-screen">
                    <div class="dashboard-content">
                        <MetricsHeroContent />
                    </div>
                </div>
            </div>
        </div>
        <div class="geometry-shape"></div>
    </div>
</section>

<style>
    /* --- GLOBAL LAYOUT --- */
    .section-container {
        width: 100%;
        font-family: "Inter", sans-serif;
        display: flex;
        justify-content: center;
        overflow: hidden;
    }

    .geometry-container {
        position: relative;
        display: flex;
        justify-content: center;
        align-items: flex-end;
        width: 100%;
        max-width: 1400px;
        margin-top: 20px;
    }

    .geometry-shape {
        position: absolute;
        width: 100%;
        height: 75%;
        background-color: var(--accent3);
        border-radius: 40px;
        z-index: 1;
    }

    /* --- DESKTOP STATE (Default: Laptop) --- */
    .device-wrapper {
        width: 75%;
        display: flex;
        flex-direction: column;
        align-items: center;
        perspective: 1000px;
        z-index: 2;
    }

    .device-chassis {
        position: relative;
        width: 100%;
        background: #1d1d1f;
        border-radius: 20px 20px 0 0;
        padding: 12px 12px 0 12px;
        box-shadow: inset 0 0 0 2px #3a3a3c;
        box-sizing: border-box;
        transition: all 0.5s ease;
    }

    .device-screen {
        position: relative;
        width: 100%;
        aspect-ratio: 16 / 9;
        background: #000;
        overflow: hidden;
        border-radius: 6px 6px 0 0;
        transition: all 0.5s ease;
    }

    .device-notch {
        position: absolute;
        top: 2px;
        left: 50%;
        transform: translateX(-50%);
        width: 12%;
        max-width: 140px;
        height: 25px;
        background-color: #1d1d1f;
        border-radius: 0 0 8px 8px;
        z-index: 20;
        transition: all 0.5s ease;
    }

    .iphone-buttons {
        display: none;
    }

    .dashboard-content {
        width: 100%;
        height: 100%;
        position: relative;
    }

    /* --- MOBILE STATE --- */
    @media (max-width: 768px) {
        .geometry-shape {
            border-radius: 30px;
        }

        .device-wrapper {
            width: 80%;
            max-width: 400px;
        }

        .device-chassis {
            background: #000;
            border-radius: 50px 50px 0 0;
            box-shadow:
                0 0 0 4px #3a3a3c,
                0 20px 50px rgba(0, 0, 0, 0.5);
        }

        .device-screen {
            aspect-ratio: 9 / 16;
            border-radius: 40px 40px 0 0;
        }

        .device-notch {
            width: 35%;
            top: 20px;
            border-radius: 20px;
            z-index: 50;
        }

        .iphone-buttons {
            display: block;
            position: absolute;
            left: -6px;
            top: 100px;
            width: 4px;
            height: 30px;
            background: #222;
            border-radius: 4px 0 0 4px;
            box-shadow: 0 50px 0 #222;
        }
    }
</style>
