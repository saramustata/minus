---
import metrics from "../content/metrics.json";

// --- 1. THE LOGIC (Server-Side) ---
const { overview, graphData } = metrics;
const maxVal = Math.max(...graphData.map((point) => point.value));

// Let the CSS handle the safe-spacing; use actual percentages for data.
const getHeight = (val) => `${(val / maxVal) * 100}%`;
---

<section class="hero-container">
    <img
        src="solarPanels.webp"
        alt="Image of solar pannels in sunset"
        class="bg-image"
    />

    <div class="overlay">
        <div class="header-row">
            <div class="metric-block">
                <span class="breadcrumb"
                    >Reports &gt; CO<sub>2</sub> Emissions</span
                >
                <div class="main-stat">
                    <span class="percent">{overview.value}</span>
                    <span class="label">{overview.label}</span>
                </div>
            </div>
            <!-- <div class="glass-pill">
                Region: Worldwide <span class="arrow">â–¼</span>
            </div> -->
        </div>

        <div class="chart-scroll-wrapper">
            <div class="chart-container">
                {
                    graphData.map((point) => (
                        <div class="chart-column">
                            <div class="bar-wrapper">
                                <div
                                    class="bar-line"
                                    style={`height: ${getHeight(point.value)}`}
                                >
                                    <span class="value-tooltip">
                                        {point.value}Mt
                                    </span>
                                    <div class="bar-dot" />
                                </div>
                            </div>
                            {point.highlight ? (
                                <span class="label-text highlight">
                                    {point.label}
                                </span>
                            ) : (
                                <span class="label-text">{point.label}</span>
                            )}
                        </div>
                    ))
                }
            </div>
        </div>
    </div>
</section>

<style>
    /* --- BASE LAYOUT --- */
    .hero-container {
        width: 100%;
        height: 100%;
        max-width: 1200px;
        font-family: "Inter", sans-serif;
        position: relative;
        overflow: hidden;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
    }

    .bg-image {
        position: absolute;
        inset: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: 1;
        filter: brightness(0.6);
    }

    .overlay {
        position: relative;
        z-index: 2;
        height: 100%;
        background: linear-gradient(
            to top,
            rgba(0, 0, 0, 0.5) 0%,
            transparent 50%,
            rgba(0, 0, 0, 0.4) 100%
        );
        padding: 3rem 2rem 2rem;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        box-sizing: border-box;
        color: white;
    }

    /* --- HEADER & TYPOGRAPHY --- */
    .header-row {
        display: flex;
        justify-content: space-between;
        align-items: baseline;
    }

    .breadcrumb {
        display: block;
        text-transform: uppercase;
        font-size: 0.75rem;
        letter-spacing: 0.1em;
        opacity: 0.7;
        margin-bottom: 0.5rem;
    }

    .main-stat {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
    }

    .percent {
        font-size: clamp(3rem, 6vw, 5rem);
        font-family: "Playfair Display", serif;
        font-weight: 300;
        line-height: 1;
    }

    .label {
        font-size: clamp(1rem, 2vw, 1.5rem);
        font-weight: 300;
        opacity: 0.9;
    }

    .glass-pill {
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(8px);
        border: 1px solid rgba(255, 255, 255, 0.3);
        padding: 0.5rem 1rem;
        border-radius: 50px;
        font-size: 0.85rem;
        font-weight: 500;
        cursor: pointer;
        transition: background 0.3s ease;
        white-space: nowrap;
    }

    .glass-pill:hover {
        background: rgba(255, 255, 255, 0.25);
    }

    .arrow {
        font-size: 0.6rem;
        margin-left: 0.5rem;
        vertical-align: middle;
    }

    /* --- CHART SYSTEM --- */
    .chart-scroll-wrapper {
        width: 100%;
        height: 80%;
        mask-image: linear-gradient(to right, black 0%, black 100%);
        -webkit-mask-image: linear-gradient(to right, black 0%, black 100%);
        transition:
            -webkit-mask-image 0.3s ease,
            mask-image 0.3s ease;
    }

    .chart-scroll-wrapper.scrolled {
        mask-image: linear-gradient(
            to right,
            transparent 0%,
            black 10%,
            black 100%
        );
        -webkit-mask-image: linear-gradient(
            to right,
            transparent 0%,
            black 10%,
            black 100%
        );
    }

    .chart-container {
        display: flex;
        justify-content: flex-start;
        align-items: flex-end;
        gap: 20px;
        height: 100%;
        width: 100%;
        overflow-x: auto;
        scrollbar-width: none;
        box-sizing: border-box;
    }

    .chart-container::-webkit-scrollbar {
        display: none;
    }

    .chart-column {
        display: flex;
        flex-direction: column;
        align-items: center;
        height: 100%;
        flex: 1;
        gap: 0.5rem;
        cursor: pointer;
        padding-top: 55px;
        box-sizing: border-box;
    }

    .chart-column:first-child {
        margin-left: 15px;
    }

    .chart-column:last-child {
        margin-right: 15px;
    }

    .bar-wrapper {
        position: relative;
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: flex-end;
    }

    .bar-line {
        width: 1px;
        background-color: rgba(255, 255, 255, 0.5);
        position: relative;
        transition:
            height 1s ease-out,
            background-color 0.3s;
        animation: growBar 1s ease-out forwards;
    }

    .bar-dot {
        width: 8px;
        height: 8px;
        background-color: white;
        border-radius: 50%;
        position: absolute;
        top: 0;
        left: 50%;
        transform: translate(-50%, -50%);
        box-shadow: 0 0 10px rgba(255, 255, 255, 0.8);
        transition: transform 0.3s;
    }

    .label-text {
        font-size: 0.75rem;
        opacity: 0.6;
        transition: opacity 0.3s;
    }

    .label-text.highlight {
        font-weight: 600;
        opacity: 1;
        color: white;
    }

    /* --- TOOLTIPS --- */
    .value-tooltip {
        position: absolute;
        bottom: calc(100% + 15px); /* Position dynamically above the bar */
        left: 50%;
        transform: translateX(-50%) translateY(10px);
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(4px);
        border: 1px solid rgba(255, 255, 255, 0.3);
        color: white;
        padding: 4px 8px;
        border-radius: 6px;
        font-size: 0.75rem;
        font-weight: 500;
        opacity: 0;
        pointer-events: none;
        white-space: nowrap;
        transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
        z-index: 10;
    }

    /* Hover States */
    .chart-column:hover .value-tooltip {
        opacity: 1;
        transform: translateX(-50%) translateY(0);
    }
    .chart-column:hover .bar-line {
        background-color: white;
    }
    .chart-column:hover .label-text {
        opacity: 1;
    }
    .chart-column:hover .bar-dot {
        transform: translate(-50%, -50%) scale(1.5);
    }

    @keyframes growBar {
        from {
            height: 0;
        }
    }

    /* --- RESPONSIVE --- */
    @media (max-width: 768px) {
        .overlay {
            padding: 4rem 1.25rem 1.25rem;
        }
        .header-row {
            flex-direction: column;
            gap: 1rem;
        }
        .main-stat {
            flex-wrap: wrap;
            gap: 0.5rem;
        }
        .percent {
            font-size: clamp(2.25rem, 8vw, 3rem);
            word-break: break-word;
        }
        .chart-scroll-wrapper {
            height: 55%;
        }
        .bar-dot {
            width: 10px;
            height: 10px;
        }
        .chart-column {
            flex: 0 0 50px;
            min-width: 50px;
            scroll-snap-align: end;
        }
        /* .chart-container::before,
        .chart-container::after {
            content: "";
            min-width: 0px; /* Set a hard minimum width
        } */
    }
</style>

<script>
    // 2. Dynamic Mask Logic Refactored
    const setupScrollMask = () => {
        const chartContainer = document.querySelector(".chart-container");
        const scrollWrapper = document.querySelector(".chart-scroll-wrapper");

        if (!chartContainer || !scrollWrapper) return;

        chartContainer.addEventListener("scroll", () => {
            if (chartContainer.scrollLeft > 10) {
                scrollWrapper.classList.add("scrolled");
            } else {
                scrollWrapper.classList.remove("scrolled");
            }
        });
    };

    // Astro lifecycle awareness (runs safely on hydration)
    setupScrollMask();
</script>
