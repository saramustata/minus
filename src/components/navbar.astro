        text-decoration: none;
        border-radius: 1000px;
        transition: background-color 0.2s;
        font-size: var(--font-size-button);
        white-space: nowrap;
    }

    .button-right:hover {
        background-color: var(--accent3);
    }

    .contact-arrow {
        height: 9px;
        margin-left: 8px;
    }

    .logo {
        height: 40px;
    }

    /* --- Mobile Menu Styles --- */
    .mobile-menu-icon {
        display: none;
        background: none;
        border: none;
        cursor: pointer;
        padding: 5px;
        color: var(--text-headline);
    }

    .mobile-menu-icon svg:hover {
        color: var(--accent6);
    }

    /* The actual dropdown menu */
    .mobile-menu {
        position: absolute;
        top: 80px; /* Adjust based on navbar height */
        left: 0;
        width: 100%;
        background-color: var(--background);
        padding: 20px 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 20px;
        border-bottom: 1px solid var(--divider-color);
        z-index: 40;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);

        /* Start hidden by the `.hidden` class (so default markup can include it)
           Use transform + opacity for smooth transitions instead of toggling `display`. */
        transform: translateY(0);
        opacity: 1;
        pointer-events: auto;
        transition:
            transform 500ms cubic-bezier(0.2, 0.8, 0.2, 1),
            opacity 200ms ease;
        will-change: transform, opacity;
    }

    /* Helper class to hide the menu with a smooth up/down transition */
    .hidden {
        transform: translateY(-12px);
        opacity: 0;
        pointer-events: none;
    }

    .mobile-link {
        font-family: font2;
        font-size: 18px;
        text-decoration: none;
        color: var(--text-headline);
        width: 100%;
        text-align: center;
        padding: 10px 0;
    }

    .mobile-link:hover {
        color: var(--accent6);
    }

    .mobile-cta {
        font-family: font2;
        font-weight: bold;
        text-decoration: none;
        color: var(--accent1);
        font-size: 18px;
        padding-bottom: 20px;
    }

    .mobile-cta:hover {
        color: var(--accent3);
    }

    .mobile-divider {
        width: 80%;
        border: none;
        border-top: 1px solid var(--divider-color);
        margin: 10px 0;
    }

    /* --- Responsiveness --- */
    @media (max-width: 768px) {
        .desktop-only {
            display: none;
        }
        .mobile-menu-icon {
            display: block;
        }
    }

    /* Ensure mobile menu doesn't show up on resize to desktop */
    @media (min-width: 769px) {
        .mobile-menu {
            display: none !important;
        }
    }
</style>
