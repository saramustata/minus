<nav class="navbar">
    <div class="navbar-left">
        <img src="logo.svg" alt="Logo" class="logo" />
    </div>

    <div class="navbar-center desktop-only">
        <a href="#news" class="navbar-item">News</a>
        <a href="https://minus-edu.base44.app" class="navbar-item">The app</a>
        <a href="#how-to" class="navbar-item">How-to</a>
        <a href="#team" class="navbar-item">Team</a>
    </div>

    <div class="navbar-right desktop-only">
        <a href="#footer" class="button-right"> Contact Us ↗ </a>
    </div>

    <button
        id="menu-toggle"
        class="mobile-menu-icon"
        aria-label="Toggle Menu"
        aria-expanded="false"
    >
        <svg
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
        >
            <line x1="3" y1="12" x2="21" y2="12"></line>
            <line x1="3" y1="6" x2="21" y2="6"></line>
            <line x1="3" y1="18" x2="21" y2="18"></line>
        </svg>
    </button>
</nav>

<div id="mobile-menu" class="mobile-menu hidden">
    <a href="#news" class="mobile-link">News</a>
    <a href="https://minus-edu.base44.app" class="mobile-link">Carbon footprint calculator</a>
    <a href="#how-to" class="mobile-link">How-to</a>
    <a href="#team" class="mobile-link">Team</a>
    <hr class="mobile-divider" />
    <a href="#footer" class="mobile-cta">Contact Us ↗</a>
</div>

<script>
    const menuToggle = document.getElementById("menu-toggle");
    const mobileMenu = document.getElementById("mobile-menu");
    const navbarEl = document.querySelector(".navbar");

    const updateNavbarShadow = () => {
        if (!navbarEl) return;
        if (window.scrollY > 0) {
            navbarEl.classList.add("scrolled");
        } else {
            navbarEl.classList.remove("scrolled");
        }
    };

    if (typeof window !== "undefined") {
        updateNavbarShadow();
        window.addEventListener("scroll", updateNavbarShadow, {
            passive: true,
        });
    }

    if (menuToggle && mobileMenu) {
        mobileMenu.setAttribute(
            "aria-hidden",
            String(mobileMenu.classList.contains("hidden")),
        );

        const closeMenu = () => {
            if (!mobileMenu.classList.contains("hidden")) {
                mobileMenu.classList.add("hidden");
                menuToggle.classList.remove("active");
                menuToggle.setAttribute("aria-expanded", "false");
                mobileMenu.setAttribute("aria-hidden", "true");

                document.body.classList.remove("no-scroll");
                navbarEl.classList.remove("scrolled");
            }
        };

        menuToggle.addEventListener("click", (event) => {
            event.stopPropagation();
            const nowHidden = mobileMenu.classList.toggle("hidden");
            menuToggle.classList.toggle("active");
            menuToggle.setAttribute("aria-expanded", String(!nowHidden));
            mobileMenu.setAttribute("aria-hidden", String(nowHidden));
            navbarEl.classList.remove("scrolled");

            if (!nowHidden) {
                document.body.classList.add("no-scroll");
            } else {
                document.body.classList.remove("no-scroll");
            }
        });

        document.addEventListener("click", (event) => {
            const isClickInsideMenu = mobileMenu.contains(event.target);
            const isClickOnToggle = menuToggle.contains(event.target);

            if (!isClickInsideMenu && !isClickOnToggle) {
                closeMenu();
            }
        });

        window.addEventListener("resize", closeMenu);
        window.addEventListener("orientationchange", closeMenu);

        const mobileLinks = mobileMenu.querySelectorAll("a");
        mobileLinks.forEach((link) =>
            link.addEventListener("click", closeMenu),
        );
    }
</script>

<style>
    .navbar {
        padding: 20px var(--page-padding-horizontal);
        display: flex;
        justify-content: space-between;
        align-items: center;
        position: sticky;
        top: 0;
        left: 0;
        right: 0;
        background-color: var(--background);
        z-index: 999;
        -webkit-backdrop-filter: blur(6px);
        backdrop-filter: blur(6px);
        transition: box-shadow 180ms ease, background-color 180ms ease;
    }

    .navbar.scrolled {
        box-shadow: 0 5px 8px rgba(0, 0, 0, 0.06);
    }

    .navbar-center {
        display: flex;
        gap: 27px;
    }

    .navbar-item {
        text-decoration: none;
        color: var(--text-headline);
        font-family: font2;
        font-size: var(--font-size-subheading);
        transition: color 0.2s;
    }

    .navbar-item:hover {
        color: var(--accent6);
    }

    .button-right {
        display: flex;
        align-items: center;
        padding: 10px 20px;
        background-color: var(--accent1);
        color: var(--text-on-accent);
        font-family: font2;
        text-decoration: none;
        border-radius: 1000px;
        transition: background-color 0.2s;
        font-size: var(--font-size-button);
        white-space: nowrap;
    }

    .button-right:hover {
        background-color: var(--accent3);
    }

    /* MODIFICATION HERE: Increased from 40px to 60px */
    .logo {
        height: 80px;
    }

    .mobile-menu-icon {
        display: none;
        background: none;
        border: none;
        cursor: pointer;
        padding: 5px;
        color: var(--text-headline);
    }

    .mobile-menu-icon svg:hover {
        color: var(--accent6);
    }

    .mobile-menu {
        position: fixed;
        top: 80px; 
        left: 0;
        width: 100%;
        max-height: calc(100vh - 80px);
        overflow-y: auto;
        background-color: var(--background);
        padding: 20px 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 20px;
        border-bottom: 1px solid var(--divider-color);
        z-index: 40;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        transform: translateY(0);
        opacity: 1;
        pointer-events: auto;
        transition: transform 500ms cubic-bezier(0.2, 0.8, 0.2, 1), opacity 200ms ease;
        will-change: transform, opacity;
        overscroll-behavior: contain;
    }

    body.no-scroll {
        overflow: hidden;
    }

    .hidden {
        transform: translateY(-12px);
        opacity: 0;
        pointer-events: none;
    }

    .mobile-link {
        font-family: font2;
        font-size: 18px;
        text-decoration: none;
        color: var(--text-headline);
        width: 100%;
        text-align: center;
        padding: 10px 0;
    }

    .mobile-link:hover {
        color: var(--accent6);
    }

    .mobile-cta {
        font-family: font2;
        font-weight: bold;
        text-decoration: none;
        color: var(--accent1);
        font-size: 18px;
        padding-bottom: 20px;
    }

    .mobile-cta:hover {
        color: var(--accent3);
    }

    .mobile-divider {
        width: 80%;
        border: none;
        border-top: 1px solid var(--divider-color);
        margin: 10px 0;
    }

    @media (max-width: 768px) {
        .desktop-only {
            display: none;
        }
        .mobile-menu-icon {
            display: block;
        }
    }

    @media (min-width: 769px) {
        .mobile-menu {
            display: none !important;
        }
    }
</style>