<nav class="navbar">
    <div class="navbar-left">
        <img src="logo.svg" alt="Logo" class="logo" />
    </div>

    <div class="navbar-center desktop-only">
        <a href="#news" class="navbar-item">News</a>
        <a href="https://minus-edu.base44.app" class="navbar-item">Metrics</a>
        <a href="#how-to" class="navbar-item">How-to</a>
        <a href="#team" class="navbar-item">Team</a>
    </div>

    <div class="navbar-right desktop-only">
        <a href="#footer" class="button-right"> Contact Us ↗ </a>
    </div>

    <button
        id="menu-toggle"
        class="mobile-menu-icon"
        aria-label="Toggle Menu"
        aria-expanded="false"
    >
        <svg
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
        >
            <line x1="3" y1="12" x2="21" y2="12"></line>
            <line x1="3" y1="6" x2="21" y2="6"></line>
            <line x1="3" y1="18" x2="21" y2="18"></line>
        </svg>
    </button>
</nav>

<div id="mobile-menu" class="mobile-menu hidden">
    <a href="#news" class="mobile-link">News</a>
    <a href="https://minus-edu.base44.app" class="mobile-link">Metrics</a>
    <a href="#how-to" class="mobile-link">How-to</a>
    <a href="#team" class="mobile-link">Team</a>
    <hr class="mobile-divider" />
    <a href="#footer" class="mobile-cta">Contact Us ↗</a>
</div>

<script>
    // This script runs on the client side
    const menuToggle = document.getElementById("menu-toggle");
    const mobileMenu = document.getElementById("mobile-menu");

    if (menuToggle && mobileMenu) {
        // Ensure `aria-hidden` reflects the initial state in the DOM
        mobileMenu.setAttribute(
            "aria-hidden",
            String(mobileMenu.classList.contains("hidden")),
        );

        const closeMenu = () => {
            mobileMenu.classList.add("hidden");
            menuToggle.classList.remove("active");
            menuToggle.setAttribute("aria-expanded", "false");
            mobileMenu.setAttribute("aria-hidden", "true");
        };

        menuToggle.addEventListener("click", () => {
            const nowHidden = mobileMenu.classList.toggle("hidden");
            menuToggle.classList.toggle("active");
            // aria-expanded should reflect whether the menu is visible
            menuToggle.setAttribute("aria-expanded", String(!nowHidden));
            mobileMenu.setAttribute("aria-hidden", String(nowHidden));
        });

        // Close the menu on various user interactions that indicate navigation/scroll
        window.addEventListener("scroll", closeMenu, { passive: true });
        window.addEventListener("touchmove", closeMenu, { passive: true });
        window.addEventListener("resize", closeMenu);
        window.addEventListener("orientationchange", closeMenu);
        window.addEventListener("wheel", closeMenu, { passive: true });

        // Close the menu when any mobile link is clicked (useful for single-page/nav)
        const mobileLinks = mobileMenu.querySelectorAll("a");
        mobileLinks.forEach((link) =>
            link.addEventListener("click", closeMenu),
        );
    }
</script>

<style>
    /* --- Base Styles --- */
