---
import { getCollection } from "astro:content";
const teamWithLead = await getCollection("team");

const teamLead = teamWithLead.find((member) => member.data.index === 0);
const teamEntries = teamWithLead.filter((member) => member.data.index !== 0);
teamEntries.sort((a, b) => a.data.index - b.data.index);
---

<section id="team" class="meet-us-section">
    <h2 class="section-heading">Our Team</h2>
    {
        teamLead && (
            <div class="featured-member">
                <div class="image-bg-wrapper featured-wrapper">
                    {teamLead.data.img && (
                        <img
                            src={teamLead.data.img}
                            alt={teamLead.data.name}
                            class="member-img"
                        />
                    )}
                </div>
                <h3 class="member-name featured-name">{teamLead.data.name}</h3>
                <p class="member-role">{teamLead.data.role}</p>
                <a href="#" class="read-more-btn">
                    Read more ↗
                </a>
            </div>
        )
    }

    <div class="team-grid">
        {
            teamEntries.map(async (member) => {
                const name = member.data.name;
                const role = member.data.role;
                const img = member.data.img;

                return (
                    <div class="member-card">
                        <div class="image-bg-wrapper">
                            {img && (
                                <img src={img} alt={name} class="member-img" />
                            )}
                        </div>
                        <h3 class="member-name">{name}</h3>
                        <p class="member-role">{role}</p>
                        <a href="#" class="read-more-btn">
                            Read more ↗
                        </a>
                    </div>
                );
            })
        }
    </div>
</section>

<style>
    .meet-us-section {
        padding: 60px var(--page-padding);
        text-align: center;
        margin-bottom: 60px;
    }

    .section-heading {
        font-family: font1;
        font-size: var(--font-size-heading);
        margin-bottom: 60px;
        color: var(--text-headline);
    }

    /* --- Featured Member Styles --- */
    .featured-member {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-bottom: 80px;
    }

    .image-bg-wrapper {
        background-color: var(--accent3); 
        border-radius: 50%;
        display: flex;
        justify-content: center;
        align-items: flex-end; 
        overflow: hidden;
        margin-bottom: 20px;
        transition: transform 0.3s ease;
        /* FIXED: Prevents the flat-line stretching seen in your screenshot */
        flex-shrink: 0; 
    }

    .member-card:hover .image-bg-wrapper,
    .featured-member:hover .image-bg-wrapper {
        transform: scale(1.05);
        background-color: var(--accent1); 
    }

    .featured-wrapper {
        width: 250px;
        height: 250px;
    }

    .member-img {
        width: 90%;
        height: auto;
        object-fit: contain;
    }

    .member-name {
        font-family: font1;
        font-size: 24px;
        color: var(--accent1); 
        margin: 0 0 5px 0;
    }

    .featured-name {
        font-size: 32px;
    }

    .member-role {
        font-family: font2;
        color: var(--text-paragraph);
        margin: 0 0 15px 0;
        font-size: 14px;
    }

    .read-more-btn {
        display: inline-block;
        padding: 6px 16px;
        background-color: var(--accent1);
        color: var(--text-on-accent);
        border-radius: 100px;
        text-decoration: none;
        font-family: font2;
        font-size: 12px;
        transition: background 0.2s;
    }

    .read-more-btn:hover {
        background-color: var(--accent3);
    }

    /* --- Grid Styles MODIFIED --- */
    .team-grid {
        display: flex;            /* Changed from grid to flex */
        flex-wrap: wrap;         /* Allows items to wrap to next line */
        justify-content: center; /* This centers the last row! */
        gap: 60px 40px;          /* Vertical and Horizontal gap */
        max-width: 1000px;       /* Limits width to force 3 per row */
        margin: 0 auto;
    }

    .member-card {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 280px;            /* Fixed width ensures they line up */
    }

    .member-card .image-bg-wrapper {
        width: 180px;
        height: 180px;
    }

    /* --- Responsive --- */
    @media (max-width: 1024px) {
        .team-grid {
            max-width: 700px;    /* Forces 2 per row on tablet */
        }
    }

    @media (max-width: 768px) {
        .team-grid {
            flex-direction: column;
            align-items: center;
            gap: 40px;
        }

        .featured-wrapper {
            width: 200px;
            height: 200px;
        }

        .featured-name {
            font-size: 28px;
        }
    }
</style>