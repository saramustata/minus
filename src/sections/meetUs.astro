---
import { getCollection } from "astro:content";
const allMembers = await getCollection("team");

const allMembersSorted = [...allMembers].sort(
    (a, b) => a.data.index - b.data.index,
);
---

<section id="team" class="meet-us-section">
    <h2 class="section-heading">Our Team</h2>
    <div class="team-grid">
        {
            allMembersSorted.map(async (member) => {
                const name = member.data.name;
                const role = member.data.role;
                const img = member.data.img;

                return (
                    <div class="member-card">
                        <div class="image-bg-wrapper">
                            {img && (
                                <img src={img} alt={name} class="member-img" />
                            )}
                        </div>
                        <h3 class="member-name">{name}</h3>
                        <p class="member-role">{role}</p>
                        <a href="#" class="read-more-btn">
                            Read more â†—
                        </a>
                    </div>
                );
            })
        }
    </div>
</section>

<style>
    .meet-us-section {
        text-align: center;
        padding: 0 var(--page-padding-horizontal);
        margin-top: 80px;
    }

    .section-heading {
        font-family: font1;
        font-size: var(--font-size-heading);
        margin-bottom: 60px;
        color: var(--text-headline);
    }

    .image-bg-wrapper {
        background-color: var(--accent3);
        border-radius: 50%;
        display: flex;
        justify-content: center;
        align-items: flex-end;
        overflow: hidden;
        margin-bottom: 20px;
        transition: transform 0.3s ease;
        flex-shrink: 0;
    }

    .member-card:hover .image-bg-wrapper {
        transform: scale(1.05);
        background-color: var(--accent1);
    }

    .member-img {
        width: 90%;
        height: auto;
        object-fit: contain;
    }

    .member-name {
        font-family: font1;
        font-size: 24px;
        color: var(--accent1);
        margin: 0 0 5px 0;
    }

    .member-role {
        font-family: font2;
        color: var(--text-paragraph);
        margin: 0 0 15px 0;
        font-size: 14px;
    }

    .read-more-btn {
        display: inline-block;
        padding: 6px 16px;
        background-color: var(--accent1);
        color: var(--text-on-accent);
        border-radius: 100px;
        text-decoration: none;
        font-family: font2;
        font-size: 12px;
        transition: background 0.2s;
    }

    .read-more-btn:hover {
        background-color: var(--accent3);
    }

    /* --- Grid Styles --- */
    .team-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr); /* 3 columns */
        gap: 60px 20px;
        max-width: 1200px;
        margin: 0 auto;
    }

    .member-card {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    /* Sizing the circles */
    .member-card .image-bg-wrapper {
        width: 180px; /* Slightly smaller to fit 3 perfectly */
        height: 180px;
    }

    /* --- Responsive --- */
    @media (max-width: 1024px) {
        .team-grid {
            grid-template-columns: repeat(2, 1fr); /* 2 columns on tablet */
        }
    }

    @media (max-width: 768px) {
        .team-grid {
            grid-template-columns: 1fr; /* 1 column on mobile */
            gap: 40px;
        }
    }
</style>
