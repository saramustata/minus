---
import MetricsHero from "../components/metricsHero.astro";
---

<div class="welcome">
	<h1 class="moto">More with less...</h1>

	<MetricsHero />
</div>

<style>
	.welcome {
		display: flex;
		flex-direction: column;
		justify-content: center;
		margin-top: 40px;
		padding: 0 var(--page-padding-horizontal);
	}

	.moto {
		font-family: font1;
		font-weight: bold;
		font-size: var(--font-size-landing);
		color: var(--text-headline);
		margin-bottom: 50px;
		line-height: 1.1;
		margin-top: 0;
	}

	.geometry-container {
		position: relative;
		display: flex;
		justify-content: center;
		align-items: center;
		margin-top: 20px;
		width: 100%;
	}

	.image-wrapper {
		position: relative;
		width: 100%;
		max-width: 1200px;
		display: flex;
		justify-content: center;
	}

	.landing-stats {
		z-index: 2;
		height: auto;
		display: block;
	}

	/* Default (Desktop/Tablet) Styles */
	.desktop-img {
		width: 80%;
		display: block; /* Visible */
	}

	.mobile-img {
		display: none; /* Hidden */
		width: 100%;
		max-width: 400px; /* Constrain phone width so it doesn't look huge */
	}

	.geometry-shape {
		position: absolute;
		bottom: 0;
		right: 5%;
		left: 5%;
		height: 60%;
		border-radius: 30px;
		background-color: var(--accent3);
		z-index: 1;
	}

	/* --- Mobile Switching Logic --- */
	@media (max-width: 650px) {
		.moto {
			margin-bottom: 30px;
		}

		/* Hide iPad */
		.desktop-img {
			display: none;
		}

		/* Show iPhone */
		.mobile-img {
			display: block;
		}

		/* Adjust geometry shape for the tall phone aspect ratio */
		.geometry-shape {
			width: 100%; /* Make it full width relative to wrapper */
			left: 0;
			right: 0;
			bottom: 0;
			height: 75%; /* Taller background for taller phone */
			border-radius: 20px;
		}
	}
</style>
